@model List<BookHotel.Models.Reservation>
@{
    @Styles.Render("~/Content/contact/css");
    ViewBag.Title = "Admin panel";
}
<style>
    .container {
        max-width: 90% !important;
    }
</style>
<table class="table mt-5">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Room</th>
            <th scope="col">Booked date</th>
            <th scope="col">Account</th>
            <th scope="col">Account Email</th>
            <th scope="col">Fullname (Reservation)</th>
            <th scope="col">Phone (Reservation)</th>
            <th scope="col">Number of people</th>
            <th scope="col">Wishes</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Room</td>
                    <td>@($"{r.Arrival.ToString("dd.MM.yyyy")} - {r.Departure.ToString("dd.MM.yyyy")}")</td>
                    <td>@($"{r.User.FirstName} {r.User.LastName}")</td>
                    <td>@r.User.Email</td>
                    <td>@r.FullName</td>
                    <td>@r.Phone</td>
                    <td>@($"{r.Adult} + {r.Children}")</td>
                    <td>@r.Wishes</td>

                </tr>
            }
        }
    </tbody>
</table>
