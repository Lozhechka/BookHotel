<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link href="~/Content/font/all.min.css" rel="stylesheet" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <nav class="site-header sticky-top py-1 main-header">
        <div class="row d-flex align-content-center" style="height: 60px; width: 100%;">
            <div class="offset-1 col-3">
                <a class="" href="#">VICTORIA'S SECRET</a>
            </div>

            <div class="col-4 text-center">
                <a class="d-none d-md-inline-block pr-5" href="@Url.Action("Index", "Home")">Home</a>
                <a class="d-none d-md-inline-block pr-5" href="@Url.Action("Index", "Reservation")">Reservation</a>
                <a class="d-none d-md-inline-block pr-5" href="@Url.Action("Contact", "Home")">Contact</a>
            </div>
            <div class="col-4 text-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="mr-3" style="color: black">@User.Identity.Name</span>
                    <a href="@Url.Action("Logoff", "Register")" class="pr-5"><span class="glyphicon glyphicon-user"></span>Logoff</a>
                }
                else
                {
                    <a href="@Url.Action("Register", "Register")" class="pr-5"><span class="glyphicon glyphicon-user"></span>Sign Up</a>
                    <a href="@Url.Action("Login", "Register")" class="pr-5"><span class="glyphicon glyphicon-log-in"></span>Sign In</a>
                }

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer id="sticky-footer" class="py-4 footer">
        <div class="container ">
            <div class="footer-right d-flex align-content-center" style="margin: 0 40%">
                <span>Hello my freds!</span>
                <a href="#" class="pl-3"> <i class="fab fa-instagram" style="font-size:20px; color:black;"></i></a>
                <a href="#" class="pl-3"> <i class="fab fa-vk" style="font-size:20px; color:black;"></i></a>
                <a href="#" class="pl-3"> <i class="fab fa-facebook-square" style="font-size:20px; color:black;"></i></a>
            </div>

        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/font/all.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
